<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.altrovis.sigabkkbn.ActivityEditIndividu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="100dp"
        android:padding="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/EditTextNIK"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="number"
            android:background="@drawable/custom_form_input"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/EditTextNama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:background="@drawable/custom_form_input"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/EditTextTanggal"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_form_input"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="22dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/EditTextBulan"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_form_input"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="22dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/EditTextTahun"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_form_input"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umur"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/EditTextUmur"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:enabled="true"
            android:inputType="number"
            android:background="@drawable/custom_form_input"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/ButtonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LANJUT"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_style_button"/>
    </LinearLayout>
</RelativeLayout>
