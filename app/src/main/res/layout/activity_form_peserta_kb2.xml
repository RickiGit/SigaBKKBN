<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_form"
    tools:context="com.altrovis.sigabkkbn.ActivityFormPesertaKB2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:paddingBottom="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Peserta KB"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/EditTextNamaPesertaKB"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_form_input"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir Istri"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/EditTextTanggal"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_form_input"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="22dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/EditTextBulan"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_form_input"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="22dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/EditTextTahun"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_form_input"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umur Istri"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/EditTextUmur"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:enabled="true"
                android:inputType="number"
                android:background="@drawable/custom_form_input"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Suami/Istri"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/EditTextNamaSuamiIstri"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_form_input"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pendidikan Suami"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/SpinnerPendidikanSuami"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/pendidikan"
                android:background="@drawable/custom_spinner"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pendidikan Istri"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/SpinnerPendidikanIstri"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/pendidikan"
                android:background="@drawable/custom_spinner"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Peserta KB"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/EditTextAlamatPesertaKB"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_form_input"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pekerjaan Suami"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/SpinnerPekerjaanSuami"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/pekerjaan"
                android:background="@drawable/custom_spinner"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pekerjaan Istri"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/SpinnerPekerjaanIstri"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/pekerjaan"
                android:background="@drawable/custom_spinner"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penggunaan Asuransi"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/SpinnerPenggunaanAsuransi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/PenggunaanAsuransi"
                android:background="@drawable/custom_spinner"
                android:layout_marginBottom="15dp"/>


            <Button
                android:id="@+id/ButtonNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjut"
                android:onClick="goToFormPesertaKB3"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_style_button"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
